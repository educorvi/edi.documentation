<div tal:define="todos view/get_entries" class="container">
  <div class="col-md-1"></div>
  <div class="col-12 col-md-10">
  <h2>ToDo-Liste</h2>
  <table class="table table-striped table-responsive">
  <thead class="thead-dark">
    <tr>
      <th>Was</th>
      <th>Wann</th>
      <th>Wer</th>
    </tr>
  </thead>
  <tbody>
    <tr tal:repeat="todo todos">
      <td><a tal:attributes="href python:todo.absolute_url()" tal:content="todo/title"/></td>
      <td><span tal:content="python: todo.datetime.strftime('%d.%m.%Y')" /></td>
      <td><span tal:content="todo/responsible"/></td>
    </tr>
  </tbody>
  </table>
  </div>
  <div class="col-md-1"></div>
</div>
